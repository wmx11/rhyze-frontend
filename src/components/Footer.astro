---
import { footerNavigation } from '../utils/navigation';
import Container from './Container.astro';
import Logo from './Logo.astro';
import Section from './Section.astro';
---

<footer class="bg-black text-white border-t border-t-primary/20">
  <Section>
    <Container className="block md:flex md:justify-center">
      <div class="flex flex-col md:flex-row gap-x-32 gap-y-16">
        <div class="space-y-4">
          <a href="/">
            <Logo />
          </a>
        </div>
        <div
          class="flex flex-1 flex-wrap flex-col md:flex-row gap-x-32 gap-y-16"
        >
          {
            footerNavigation.map((item) => (
              <div>
                <div class="mb-4 font-bold text-xl">{item.section}</div>
                <ul class="space-y-2">
                  {item.navigation.map((item) => (
                    <li>
                      <a href={item.href} target="_blank">
                        {item.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </Container>
  </Section>
  <div class="flex justify-center w-full py-4 text-sm">
    <div>
      Built with love by <a href="https://modiggo.com" target="_blank"
        >Modiggo</a
      >
    </div>
  </div>
</footer>
